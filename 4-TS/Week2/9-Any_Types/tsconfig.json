{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "ES2022",
        "lib": [
            "es2018",
            "dom"
        ],
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": false
    },
    "include": [
        "*.ts"
    ],
}